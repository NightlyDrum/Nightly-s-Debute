local ScreenGui = Instance.new("ScreenGui")
local Container = Instance.new("Frame")
local Topbar = Instance.new("Frame")
local NightlyDebute = Instance.new("TextLabel")
local Tabs = Instance.new("Frame")
local Content = Instance.new("Frame")

-- Properties:

ScreenGui.Parent = game.Players.LocalPlayer:WaitForChild("PlayerGui")
ScreenGui.ZIndexBehavior = Enum.ZIndexBehavior.Sibling

Container.Name = "Container"
Container.Parent = ScreenGui
Container.BackgroundColor3 = Color3.fromRGB(43, 43, 43)
Container.BorderColor3 = Color3.fromRGB(105, 0, 157)
Container.Position = UDim2.new(0.0378228799, 0, 0.140287772, 0)
Container.Size = UDim2.new(0, 747, 0, 383)

Topbar.Name = "Topbar"
Topbar.Parent = Container
Topbar.BackgroundColor3 = Color3.fromRGB(16, 16, 16)
Topbar.BorderColor3 = Color3.fromRGB(105, 0, 157)
Topbar.Size = UDim2.new(0, 747, 0, 33)

NightlyDebute.Name = "Nightly Debute"
NightlyDebute.Parent = Topbar
NightlyDebute.BackgroundColor3 = Color3.fromRGB(25, 25, 25)
NightlyDebute.BackgroundTransparency = 1.000
NightlyDebute.BorderColor3 = Color3.fromRGB(0, 0, 0)
NightlyDebute.BorderSizePixel = 0
NightlyDebute.Position = UDim2.new(0.0522088371, 0, 0, 0)
NightlyDebute.Size = UDim2.new(0, 129, 0, 33)
NightlyDebute.Font = Enum.Font.Unknown
NightlyDebute.Text = "Nightly's Debute |"
NightlyDebute.TextColor3 = Color3.fromRGB(255, 0, 255)
NightlyDebute.TextSize = 14.000

Tabs.Name = "Tabs"
Tabs.Parent = Topbar
Tabs.BackgroundColor3 = Color3.fromRGB(16, 16, 16)
Tabs.BorderColor3 = Color3.fromRGB(0, 0, 0)
Tabs.BorderSizePixel = 0
Tabs.Position = UDim2.new(0.289156616, 0, 0, 0)
Tabs.Size = UDim2.new(0, 531, 0, 32)

Content.Name = "Content"
Content.Parent = Container
Content.BackgroundColor3 = Color3.fromRGB(30, 30, 30)
Content.BorderColor3 = Color3.fromRGB(105, 0, 157)
Content.Position = UDim2.new(0, 0, 0.103489168, 0)
Content.Size = UDim2.new(0, 747, 0, 343)

-- Function to create a new tab
local function createTab(name, index)
    local Tab = Instance.new("TextButton")
    Tab.Name = name
    Tab.Parent = Tabs
    Tab.BackgroundColor3 = Color3.fromRGB(255, 255, 255) -- White background (to be made transparent)
    Tab.BackgroundTransparency = 0.5 -- Semi-transparent background
    Tab.BorderColor3 = Color3.fromRGB(0, 0, 0)
    Tab.BorderSizePixel = 0
    Tab.Size = UDim2.new(0, 100, 0, 32) -- Set size as needed
    Tab.Position = UDim2.new(0, (index * 100), 0, 0) -- Organize tabs horizontally
    Tab.Font = Enum.Font.Unknown
    Tab.Text = name
    Tab.TextColor3 = Color3.fromRGB(255, 255, 255) -- White text color
    Tab.TextSize = 14.000

    -- Connect a function for when the tab is clicked
    Tab.MouseButton1Click:Connect(function()
        -- Hide all content and show specific content for this tab
        for _, child in ipairs(Content:GetChildren()) do
            child.Visible = false
        end
        -- Show the content associated with this tab (you need to create and assign it)
        -- Example: Content[name].Visible = true
    end)

    return Tab
end
